
@{
    Layout = null;
    ViewData["Title"] = "GodErlang Management Sign in";
}

<!DOCTYPE html>
<html class="login-bg" style="background-image: url(&quot;../images/9.jpg&quot;);">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>GodErlang Management Sign in</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- bootstrap -->
    <link href="~/css/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/css/bootstrap/bootstrap-responsive.css" rel="stylesheet" />
    <link href="~/css/bootstrap/bootstrap-overrides.css" type="text/css" rel="stylesheet" />

    <!-- global styles -->
    <link rel="stylesheet" type="text/css" href="~/css/layout.css" />
    <link rel="stylesheet" type="text/css" href="~/css/elements.css" />
    <link rel="stylesheet" type="text/css" href="~/css/icons.css" />

    <!-- libraries -->
    <link href="~/css/lib/font-awesome.css" type="text/css" rel="stylesheet" />

    <!-- this page specific styles -->
    <link rel="stylesheet" type="text/css" href="~/css/signin.css" />
</head>
<body>

    <div class="row-fluid login-wrapper">
        <a href="http://demo2.cssmoban.com/cssthemes6/11.19ZF3/index.html">
            <img class="logo" src="~/images/logo-white.png">
        </a>

        <div class="span4 box">
            <form action="/account/signin" method="post">
                <div class="content-wrap">
                    <h6>Log in</h6>
                    <input class="span12" type="text" id="account" name="account" placeholder="E-mail address">
                    <input class="span12" type="password" id="pwd" name="pwd" placeholder="Your password">
                    <a href="#" class="forgot">Forgot password?</a>
                    <div class="remember">
                        <input id="remember-me" type="checkbox">
                        <label for="remember-me">Remember me</label>
                    </div>
                    <button class="btn-glow primary login" type="submit" onclick="return CheckParams(this);">Log in</button>
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class='alert alert-error' style="margin-top:20px;"><i class='icon-remove-sign'></i>@ViewBag.ErrorMessage</div>
                    }
                </div>
            </form>
        </div>

        <div class="span4 no-account">
            <p>Don't have an account?</p>
            <a href="http://demo2.cssmoban.com/cssthemes6/11.19ZF3/signup.html">Sign up</a>
        </div>
    </div>
</body>
</html>

<script type="text/javascript">

    window.onload = () => {
        document.getElementsByTagName('form')[0].reset();
    };

    function CheckParams(btnObj) {
        var accountObj = document.getElementById('account');
        if (!!!accountObj.value.trim()) {
            accountObj.focus();
            return false;
        }

        var pwdObj = document.getElementById('pwd');
        if (!!!pwdObj.value.trim()) {
            pwdObj.focus();
            return false;
        }

        btnObj.innerText = "Waiting...";
        return true;
    }
</script>