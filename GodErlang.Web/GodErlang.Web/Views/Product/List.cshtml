
@{
    ViewData["Title"] = "List";
    List<GodErlang.Entity.Models.ProductDetails> products = ViewBag.Products as List<GodErlang.Entity.Models.ProductDetails>;
}

<div id="pad-wrapper">
    <div class="table-wrapper products-table section">
        <div class="row-fluid head">
            <div class="span12">
                <h4>Products</h4>
            </div>
        </div>

        <div class="row-fluid filter-block">
            <div class="pull-right">
                <div class="ui-select">
                    <select>
                        <option>
                            Filter users
                        </option>
                        <option>
                            Signed last 30 days
                        </option>
                        <option>
                            Active users
                        </option>
                    </select>
                </div>
                <input type="text" class="search">
                <a class="btn-flat new-product" href="/product/add">+ Add product</a>
            </div>
        </div>

        <div class="row-fluid">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th class="span3">
                            Images
                        </th>
                        <th class="span3">
                            Title
                        </th>
                        <th class="span3">
                            <span class="line"></span>Actual Price
                        </th>
                        <th class="span3">
                            <span class="line"></span>Promotion Price
                        </th>
                        <th class="span3">
                            <span class="line"></span>Offer Type
                        </th>
                        <th class="span3" style="width:10%;">
                            <span class="line"></span>Update Time
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in products)
                    {
                        <tr>
                            <td style="width:12%">
                                <img src="@item.ProductImages" width="80">
                            </td>
                            <td>
                                [@item.SourceTypeName] <a href="@item.ReferUrl" target="_blank" class="name">@item.Title</a>
                            </td>
                            <td class="description">
                                @item.ActualPriceDesc
                            </td>
                            <td class="description">
                                @item.PromotionPriceDesc
                            </td>
                            <td class="description">
                                @item.OfferType
                            </td>
                            <td class="description">
                                @item.UpdateTime?.ToString("yyyy-MM-dd HH:mm:ss")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>