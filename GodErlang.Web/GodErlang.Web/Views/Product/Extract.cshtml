
@{
    ViewData["Title"] = "Extract";
}

<div id="pad-wrapper">
    <div class="table-wrapper products-table section">
        <div class="row-fluid head">
            <div class="span12">
                <h4>Products / Extract</h4>
            </div>
        </div>

        <div class="row-fluid form-wrapper" style="margin-top:50px;">
            <form action="#" method="post">
                @Html.AntiForgeryToken()
                <div class="field-box">
                    <label>Product Url:</label>
                    <input class="span8" type="text" id="productUrl" name="productUrl" autofocus />
                </div>
                <div class="field-box">
                    <label></label>
                    <button type="submit" class="btn-flat white">
                        Extract
                    </button>
                    <span class="loading" style="display:none;">Waiting...</span>
                </div>
                <div class="field-box" id="div_result">
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/jquery.form.js" type="text/javascript"></script>
<script type="text/javascript">

    var isRunning = false;
    var UI = {
        ShowError: function (msg) {
            $("#div_result").html("<div class='alert alert-error'><i class='icon-remove-sign'></i>" + msg + "</div>");
            UI.HideLoading();
        },
        ShowMessage: function () {
            $("#div_result").html("<div class='alert alert-success'><i class='icon-ok-sign'></i>Successfully added to the queue</div>");
            UI.HideLoading();
            Sleep(UI.ClearResult, 5000);
        },
        ClearResult: function () {
            $("#div_result").html("");
        },
        Loading: function () {
            $(".loading").css("display", "");
        },
        HideLoading: function () {
            $(".loading").css("display", "none");
        }
    };

    $(function () {
        $("form").submit(function () {
            if (isRunning) {
                return false;
            }
            isRunning = true;

            if (!CheckParams()) {
                isRunning = false;
                return false;
            }

            $(this).ajaxSubmit({
                type: "post",
                url: "/product/extractdo",
                success: function (data) {
                    isRunning = false;
                    $("form")[0].reset();
                    if (data.state == true) {
                        UI.ShowMessage();
                    } else {
                        UI.ShowError(data.error);
                    }
                }
            });
            return false;
        });
    });

    function CheckParams() {
        if (!!!$("#productUrl").val()) {
            $("#productUrl").focus();
            UI.ShowError("Product url can't be empty.");
            return false;
        }

        UI.ClearResult();
        UI.Loading();
        return true;
    }
</script>